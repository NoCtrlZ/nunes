<div id="main">
    <div id="left">

        <div id="title">
            <h1><%= @article.title %></h1>
        </div>

        <div id="intro">
            <%= markdown(@article.intro) %>
        </div>

        <div id="topic">
            <h2>この記事の目次</h2>
            <div id="topic-contents">
                <%= markdown(@article.topic) %>
            </div>
        </div>

        <div id="content">
            <%= sanitize markdown(@article.text) %>
        </div>

    </div>

    <div id="right">
        <div id="article-topic">
            <h3>この記事の目次</h3>
            <%= markdown(@article.topic) %>
        </div>

    	<div id="latest-contents">
            <h3>最新の記事</h3>
            <ul>
                <% @articles.each do |article| %>
                    <li><%= link_to article.title, admin_article_path(article.id) %></li>
                <% end %>
            </ul>
    	</div>
    </div>
</div>
